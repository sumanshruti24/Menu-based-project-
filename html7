    <script>

        document.getElementById('emailForm').addEventListener('submit', function(event) {

            event.preventDefault(); // Prevent form from submitting the traditional way

            const formData = new FormData(this);

            fetch('/cgi-bin/bulk_email.py', {

                method: 'POST',

                body: formData

            })

            .then(response => response.json())

            .then(data => {

                if (data.results) {

                    const results = data.results;

                    results.forEach(result => {

                        if (result.status === "success") {

                            alert(`‚úÖ Email sent successfully to ${result.recipient}`);

                        } else {

                            alert(`‚ùå Failed to send email to ${result.recipient}. Error: ${result.error}`);

                        }

                    });

                } else {

                    alert('‚ùå Failed to send emails: Unknown error');

                }

            })

            .catch(error => {

                console.error('Error:', error);

                alert('‚ùå An error occurred while sending emails.');

            });

        });

    </script>

